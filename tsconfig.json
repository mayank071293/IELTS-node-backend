{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "/__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}